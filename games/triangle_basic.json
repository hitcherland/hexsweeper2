{
    "name": "triangle basic",
    "body": "<svg xmlns:'http://www.w3.org/2000/svg' viewbox='-${this.radius+4} -${this.radius+4} ${2*this.radius+8} ${2*this.radius+8}'><style> .cell { stroke: white; stroke-width:0.1; }</style></svg>",
    "variables": {
        "radius": 1
    },
    "units": {
        "X": [ 1.732, 1 ],
        "Y": [ -1.732, 1 ],
        "Z": [ 0, -2 ]
    },
    "cells": {
        "up_triangle": {
            "html": "<g class='cell' transform='matrix(1,0,0,1,${this.x},${this.y})'><polygon points='0,1,0.866,-0.5,-0.866,-0.5'></polygon><text></text></g>",
            "neighbours": [
                { "type": "down_triangle", "position": { "X": 1 } },
                { "type": "down_triangle", "position": { "Y": 1 } },
                { "type": "down_triangle", "position": { "Z": 1 } }
            ]
        },
        "down_triangle": {
            "html": "<g class='cell' transform='matrix(1,0,0,1,${this.x},${this.y})'><polygon points='0,-1,0.866,0.5,-0.866,0.5'></polygon><text></text></g>",
            "neighbours": [
                { "type": "up_triangle", "position": { "X": -1 } },
                { "type": "up_triangle", "position": { "Y": -1 } },
                { "type": "up_triangle", "position": { "Z": -1 } }
            ]
        }
    },
    "layout": {
        "seed": [
            {
                "cell": "up_triangle",
                "position": { "X": 0, "Y": 0 }
            }
        ],
        "rule": "Math.abs( ${this.X} ) <= ${this.radius} && Math.abs( ${this.Y}) <= ${this.radius} && Math.abs( ${this.Z} ) <= ${this.radius}",
        "values": "radius"
    }
}
