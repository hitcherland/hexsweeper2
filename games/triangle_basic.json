{
    "name": "triangle basic",
    "body": "<svg xmlns:'http://www.w3.org/2000/svg' viewbox='-${ 1.732 * this.radius } -${this.radius * 3 } ${4*this.radius * 0.866} ${6*this.radius}'><style> .cell { stroke: white; stroke-width:0.1; }</style></svg>",
    "variables": {
        "radius": 3
    },
    "units": {
        "X": [ 0.866, 0.5 ],
        "Y": [ -0.866, 0.5 ]
    },
    "cells": {
        "up_triangle": {
            "html": "<g class='cell' transform='matrix(1,0,0,1,${this.x},${this.y})'><polygon stroke-linejoin='round' points='0,1,0.866,-0.5,-0.866,-0.5'></polygon><text></text></g>",
            "neighbours": [
                { "type": "down_triangle", "position": { "X": 1 } },
                { "type": "down_triangle", "position": { "Y": 1 } },
                { "type": "down_triangle", "position": { "X": -1, "Y": -1 } }
            ]
        },
        "down_triangle": {
            "html": "<g class='cell' transform='matrix(1,0,0,1,${this.x},${this.y})'><polygon stroke-linejoin='round' points='0,-1,0.866,0.5,-0.866,0.5'></polygon><text></text></g>",
            "neighbours": [
                { "type": "up_triangle", "position": { "X": -1 } },
                { "type": "up_triangle", "position": { "Y": -1 } },
                { "type": "up_triangle", "position": { "X": 1, "Y": 1 } }
            ]
        }
    },
    "layout": {
        "seed": [
            {
                "cell": "up_triangle",
                "position": { "X": 0, "Y": 0 }
            }
        ],
        "rule": "${this.radius}%2==1?( Math.max( Math.abs(${this.X}), Math.abs(${this.Y})) <= ${this.radius} ): Math.abs(${this.X}+${this.Y}) <=${this.radius}",
        "values": "radius"
    }
}
