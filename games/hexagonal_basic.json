{
    "name": "hexagonal basic",
    "body": "<svg xmlns:'http://www.w3.org/2000/svg' viewbox='-5 -5 10 10'><style> .hex { stroke: white; stroke-width:0.1; }</style></svg>",
    "variables": {
        "radius": 3
    },
    "units": {
        "H": [ 0.433, 0.75 ],
        "I": [ 0.8660, 0 ]
    },
    "cells": {
        "hexagon": {
            "html": "<g class='hex' transform='matrix(1,0,0,1,${0},${1})'><polygon points='0,0.5,0.433,0.25,0.433,-0.25,0,-0.5,-0.433,-0.25,-0.433,0.25,0,0.5'></polygon><text></text></g>",
            "neighbours": [
                { "type": "hexagon", "position": { "H": 1 } },
                { "type": "hexagon", "position": { "H": -1 } },
                { "type": "hexagon", "position": { "I": 1 } },
                { "type": "hexagon", "position": { "I": -1 } },
                { "type": "hexagon", "position": { "H": 1, "I": -1 } },
                { "type": "hexagon", "position": { "H": -1, "I": 1 } }
            ]
        }
    },
    "layout": {
        "seed": [
            {
                "cell": "hexagon",
                "position": { "H": 0, "I": 0 }
            }
        ],
        "rule": "Math.abs( ${1} + ${2} ) <= ${0}",
        "values": "radius"
    }
}
