{
    "name": "hexagonal basic",
    "body": "<svg xmlns:'http://www.w3.org/2000/svg' viewbox='-${this.radius} -${this.radius} ${2*this.radius} ${2*this.radius}'><style> .cell { stroke: white; stroke-width:0.1; }</style></svg>",
    "variables": {
        "radius": 4
    },
    "units": {
        "H": [ 0.433, 0.75 ],
        "I": [ 0.8660, 0 ]
    },
    "cells": {
        "hexagon": {
            "html": "<g class='cell' transform='matrix(1,0,0,1,${this.x},${this.y})'><polygon points='0,0.5,0.433,0.25,0.433,-0.25,0,-0.5,-0.433,-0.25,-0.433,0.25,0,0.5'></polygon><text></text></g>",
            "neighbours": [
                { "type": "hexagon", "position": { "H": 1 } },
                { "type": "hexagon", "position": { "H": -1 } },
                { "type": "hexagon", "position": { "I": 1 } },
                { "type": "hexagon", "position": { "I": -1 } },
                { "type": "hexagon", "position": { "H": 1, "I": -1 } },
                { "type": "hexagon", "position": { "H": -1, "I": 1 } }
            ]
        }
    },
    "layout": {
        "seed": [
            {
                "cell": "hexagon",
                "position": { "H": 0, "I": 0 }
            }
        ],
        "rule": "Math.abs( ${this.H} + ${this.I} ) <= ${this.radius} && Math.abs( ${this.H} ) <= ${this.radius} && Math.abs( ${this.I}) <= ${this.radius}",
        "values": "radius"
    }
}
