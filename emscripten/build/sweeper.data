{
    "name": "triangle basic",
    "body": "<svg xmlns:'http://www.w3.org/2000/svg' viewbox='-${1.732*radius/2} -${0} ${1.732*radius} ${1.5*radius}'><style> .cell { stroke: white; stroke-width:0.1; } .cell text { font-size: 0.3; stroke-width: 0; fill: white; }</style></svg>",
    "variables": {
        "radius": 4
    },
    "units": {
        "X": [ -0.866, 0.5 ],
        "Y": [ 0.866, 0.5 ]
    },
    "cells": {
        "up_triangle": {
            "html": "<g class='cell' transform='matrix(1,0,0,1,${x},${y})'><polygon stroke-linejoin='round' points='0,-1,0.866,0.5,-0.866,0.5'></polygon><text></text></g>",
            "neighbours": [
                { "type": "up_triangle", "position": { "X": 2, "Y": 1 } },
                { "type": "down_triangle", "position": { "X": 1, "Y": 1 } },
                { "type": "up_triangle", "position": { "X": 1, "Y": 2 } }
            ]
        },
        "down_triangle": {
            "html": "<g class='cell' transform='matrix(1,0,0,1,${x},${y})'><polygon stroke-linejoin='round' points='0,1,0.866,-0.5,-0.866,-0.5'></polygon><text></text></g>",
            "neighbours": [
            ]
        }
    },
    "layout": {
        "seed": [
            {
                "cell": "up_triangle",
                "position": { "X": 0, "Y": 0 }
            }
        ],
        "rule": "${X}+${Y}<=3*(${radius}-1)",
        "values": "radius"
    }
}
{
    "name": "hexagonal basic",
    "body": "<svg xmlns:'http://www.w3.org/2000/svg' viewbox='-${radius} -${radius} ${2*radius} ${2*radius}'><style> .cell { stroke: white; stroke-width:0.1; }</style></svg>",
    "variables": {
        "radius": 4
    },
    "units": {
        "H": [ 0.433, 0.75 ],
        "I": [ 0.8660, 0 ]
    },
    "cells": {
        "hexagon": {
            "html": "<g class='cell' transform='matrix(1,0,0,1,${x},${y})'><polygon points='0,0.5,0.433,0.25,0.433,-0.25,0,-0.5,-0.433,-0.25,-0.433,0.25,0,0.5'></polygon><text></text></g>",
            "neighbours": [
                { "type": "hexagon", "position": { "H": 1 } },
                { "type": "hexagon", "position": { "H": -1 } },
                { "type": "hexagon", "position": { "I": 1 } },
                { "type": "hexagon", "position": { "I": -1 } },
                { "type": "hexagon", "position": { "H": 1, "I": -1 } },
                { "type": "hexagon", "position": { "H": -1, "I": 1 } }
            ]
        }
    },
    "layout": {
        "seed": [
            {
                "cell": "hexagon",
                "position": { "H": 0, "I": 0 }
            }
        ],
        "rule": "Math.abs( ${H} + ${I} ) <= ${radius} && Math.abs( ${H} ) <= ${radius} && Math.abs( ${I}) <= ${radius}",
        "values": "radius"
    }
}
{
    "name": "square basic",
    "body": "<svg xmlns:'http://www.w3.org/2000/svg' viewbox='-${radius+1} -${radius+1} ${2*radius+2} ${2*radius+2}'><style> .cell { stroke: white; stroke-width:0.1; }</style></svg>",
    "variables": {
        "radius": 4
    },
    "units": {
        "X": [ 1, 0 ],
        "Y": [ 0, 1 ]
    },
    "cells": {
        "square": {
            "html": "<g class='cell' transform='matrix(1,0,0,1,${x},${y})'><rect x='-0.5' y='-0.5' width=1 height=1></rect><text></text></g>",
            "neighbours": [
                { "type": "square", "position": { "X": 1 } },
                { "type": "square", "position": { "X": -1 } },
                { "type": "square", "position": { "Y": 1 } },
                { "type": "square", "position": { "Y": -1 } },
                { "type": "square", "position": { "X": 1, "Y": -1 } },
                { "type": "square", "position": { "X": -1, "Y": -1 } },
                { "type": "square", "position": { "X": -1, "Y": 1 } },
                { "type": "square", "position": { "X": 1, "Y": 1 } }
            ]
        }
    },
    "layout": {
        "seed": [
            {
                "cell": "square",
                "position": { "X": 0, "Y": 0 }
            }
        ],
        "rule": "Math.abs( ${X} ) <= ${radius} && Math.abs( ${Y}) <= ${radius}",
        "values": "radius"
    }
}
